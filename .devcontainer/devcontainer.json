{
  "name": "Challenge",
  "image": "sagebionetworks/challenge-devcontainer:bf457d84",

  "features": {
    // docker features must be specified in the developer facing
    // devcontainer.json for VS Code to properly mount the docker sockets.
    "docker-in-docker": "20.10"
  },

  // Set *default* container specific settings.json values on container create.
  "settings": {},

  // Add the IDs of extensions you want installed when the container is created.
  "extensions": [
    "dbaeumer.vscode-eslint",
    "esbenp.prettier-vscode",
    "firsttris.vscode-jest-runner",
    "mhutchie.git-graph",
    "ms-python.python",
    "nrwl.angular-console",
    "stkb.rewrap",
    "webhint.vscode-webhint",
    "GitHub.vscode-pull-request-github",
    "humao.rest-client",
    "vscjava.vscode-java-pack",
    "vscjava.vscode-lombok",
    "Pivotal.vscode-boot-dev-pack",
    "mtxr.sqltools",
    "mtxr.sqltools-driver-mysql",
    "mtxr.sqltools-driver-pg",
    "mongodb.mongodb-vscode",
    "shengchen.vscode-checkstyle",
    "1000ch.svgo"
  ],

  // Use 'forwardPorts' to make a list of ports inside the container available
	// locally.
  "forwardPorts": [
    3306,
    4200,
    4201,
    4211,
    5000,
    5044,
    5432,
    5601,
    8080,
    8081,
    8082,
    8083,
    8090,
    8091,
    8092,
    9200,
    9300,
    9600,
    27017
  ],

  // Object that maps a port number, "host:port" value, range, or regular
  // expression to a set of default options.
  "portsAttributes": {
    "3306": {
      "label": "challenge-mariadb",
      "onAutoForward": "silent"
    },
    "4200": {
      "label": "challenge-registry"
    },
    "4201": {
      "label": "challenge-platform"
    },
    "4211": {
      "label": "nx graph"
    },
    "5000": {
      "label": "challenge-logstash (TCP input)",
      "onAutoForward": "silent"
    },
    "5044": {
      "label": "challenge-logstash (Beats input)",
      "onAutoForward": "silent"
    },
    "5432": {
      "label": "challenge-postgresql",
      "onAutoForward": "silent"
    },
    "5601": {
      "label": "challenge-kibana",
      "onAutoForward": "silent"
    },
    "8080": {
      "label": "challenge-keycloak",
      "onAutoForward": "silent"
    },
    "8081": {
      "label": "challenge-service-registry",
      "onAutoForward": "silent"
    },
    "8082": {
      "label": "challenge-api-gateway",
      "onAutoForward": "silent"
    },
    "8083": {
      "label": "challenge-user-service",
      "onAutoForward": "silent"
    },
    "8090": {
      "label": "challenge-config-service",
      "onAutoForward": "silent"
    },
    "8091": {
      "label": "challenge-auth-service",
      "onAutoForward": "silent"
    },
    "8092": {
      "label": "challenge-core-service",
      "onAutoForward": "silent"
    },
    "9200": {
      "label": "challenge-elasticsearch (HTTP)",
      "onAutoForward": "silent"
    },
    "9300": {
      "label": "challenge-elasticsearch (TCP transport)",
      "onAutoForward": "silent"
    },
    "9600": {
      "label": "challenge-logstash (monitoring API)",
      "onAutoForward": "silent"
    },
    "27017": {
      "label": "challenge-mongodb",
      "onAutoForward": "silent"
    }
  },

  // Comment out to connect as root instead. More info:
  // https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode",

  // Indicates whether VS Code and other devcontainer.json supporting tools
  // should stop the containers when the related tool window is closed / shut
  // down.
  "shutdownAction": "stopContainer"
}
