{
  "name": "Sage Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "imageVersion": "jammy-20240808",
      "devcontainerVersion": "${localEnv:DEVCONTAINER_VERSION}"
    }
  },
  "remoteUser": "vscode",
  "shutdownAction": "stopContainer",
  "runArgs": [
    "--name",
    "sage_devcontainer"
  ]
}