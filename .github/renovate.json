{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabled": true,
  "assignees": [
    "tschaffter"
  ],
  "semanticCommitScope": "deps",
  "automergeType": "pr",
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "gradle": {
    "enabled": false
  },
  "gradle-wrapper": {
    "enabled": false
  },
  "ignorePaths": [
    "apps/api",
    "apps/challenge-elk"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "dependencyDashboardApproval": true
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint"
    },
    {
      "matchPackageNames": ["aws-sdk"],
      "schedule": ["after 9pm on sunday"]
    }
  ],
  "timezone": "America/Los_Angeles",
  "schedule": [
    "after 12am every weekday",
    "before 5am every weekday",
    "every weekend"
  ]
}