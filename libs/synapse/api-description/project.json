{
  "name": "synapse-api-description",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/synapse/api-description/src",
  "projectType": "library",
  "targets": {
    "get-openapi": {
      "executor": "nx:run-commands",
      "options": {
        "command": "curl -fsSL https://rest-docs.synapse.org/rest/openapi/openapispecification.json --output src/openapi.json",
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/openapi"],
      "options": {
        "command": "redocly bundle synapse-public --output openapi/openapi.yaml",
        "cwd": "{projectRoot}"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "redocly lint --config redocly.yaml {projectName}"
      },
      "dependsOn": ["build"]
    }
  },
  "tags": ["language:openapi"],
  "implicitDependencies": []
}
