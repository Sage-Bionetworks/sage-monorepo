{
  "name": "api-spec",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/api-spec/src",
  "prefix": "challenge-registry",
  "targets": {
    "build-individuals": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "openapi bundle --output build/base.openapi.yaml src/base.openapi.yaml",
          "openapi bundle --output build/user.openapi.yaml src/user.openapi.yaml",
          "openapi bundle --output build/organization.openapi.yaml src/organization.openapi.yaml"
        ],
        "parallel": true,
        "cwd": "libs/api-spec"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "openapi-merge-cli --config openapi-merge.yaml",
        "cwd": "libs/api-spec"
      },
      "dependsOn": ["build-individuals"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "openapi preview-docs src/user.openapi.yaml",
        "cwd": "libs/api-spec"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "lint-openapi --config .validaterc --ruleset .spectral.yaml --verbose build/user.openapi.yaml",
        "cwd": "libs/api-spec"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write libs/api-spec"
      }
    },
    "format-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --check libs/api-spec"
      }
    }
  },
  "tags": []
}
