{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/api-spec/src",
  "prefix": "challenge-registry",
  "targets": {
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "openapi bundle -o openapi src/openapi.yaml",
        "cwd": "libs/api-spec"
      }
    },
    "serve": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "openapi preview-docs src/openapi.yaml",
        "cwd": "libs/api-spec"
      }
    },
    "lint": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "lint-openapi --config .validaterc --ruleset .spectral.yaml -v openapi.yaml",
        "cwd": "libs/api-spec"
      }
    },
    "format": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "prettier --write libs/api-spec"
      }
    },
    "format-check": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "prettier --check libs/api-spec"
      }
    }
  },
  "tags": []
}
