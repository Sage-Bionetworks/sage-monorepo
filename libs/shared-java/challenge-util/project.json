{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared-java/challenge-util/src",
  "projectType": "library",
  "targets": {
    "prepare-java": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "./gradlew --version 1> /dev/null"
        ],
        "cwd": "libs/shared-java/challenge-util"
      }
    },
    "build": {
      "executor": "@nxrocks/nx-spring-boot:build",
      "options": {
        "root": "libs/shared-java/challenge-util"
      },
      "outputs": [
        "libs/shared-java/challenge-util/build"
      ]
    },
    "install": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "./gradlew publishToMavenLocal",
        "cwd": "libs/shared-java/challenge-util"
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": "self"
        }
      ]
    },
    "test": {
      "executor": "@nxrocks/nx-spring-boot:test",
      "options": {
        "root": "libs/shared-java/challenge-util"
      }
    },
    "clean": {
      "executor": "@nxrocks/nx-spring-boot:clean",
      "options": {
        "root": "libs/shared-java/challenge-util"
      }
    }
  },
  "tags": [
    "type:feature",
    "scope:shared"
  ]
}
