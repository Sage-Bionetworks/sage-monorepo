{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/api-angular/src",
  "prefix": "challenge-registry",
  "targets": {
    "generate-sources": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "rm -fr src/lib/api",
          "rm -fr src/lib/model",
          "openapi-generator-cli generate -g typescript-angular -o src/lib -c openapi-generator.config.yaml -i ../api-spec/openapi.yaml"
        ],
        "cwd": "libs/api-angular",
        "parallel": false
      }
    },
    "build": {
      "executor": "@nrwl/angular:ng-packagr-lite",
      "outputs": ["dist/libs/api-angular"],
      "options": {
        "project": "libs/api-angular/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/api-angular/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/api-angular/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/api-angular"],
      "options": {
        "jestConfig": "libs/api-angular/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/api-angular/src/index.ts"]
      }
    },
    "lint-fix": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/api-angular/src/index.ts"],
        "fix": true
      }
    }
  },
  "tags": []
}
