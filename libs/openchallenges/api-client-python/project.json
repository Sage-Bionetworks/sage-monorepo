{
  "name": "openchallenges-api-client-python",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/openchallenges/api-client-python/src",
  "projectType": "library",
  "targets": {
    "prepare": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv sync",
        "cwd": "{projectRoot}"
      }
    },
    "generate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "xargs rm -fr <.openapi-generator/FILES",
          "openapi-generator-cli generate",
          "echo 'TODO: Format generated code'"
        ],
        "cwd": "{projectRoot}",
        "parallel": false
      },
      "dependsOn": ["^build"]
    }
  },
  "tags": ["type:library", "language:python", "package-manager:uv"]
}
