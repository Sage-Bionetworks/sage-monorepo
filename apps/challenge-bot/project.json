{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/challenge-bot/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/challenge-bot",
        "main": "apps/challenge-bot/src/app.ts",
        "tsConfig": "apps/challenge-bot/tsconfig.app.json",
        "assets": ["apps/challenge-bot/*.md"]
      }
    },
    "prepare": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "yarn install --immutable",
        "cwd": "apps/challenge-bot"
      }
    },
    "serve": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "probot run ../../dist/apps/challenge-bot/src/app.js",
        "cwd": "apps/challenge-bot"
      }
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "serverless deploy",
        "cwd": "apps/challenge-bot"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/challenge-bot/src/**/*.ts"]
      }
    },
    "lint-fix": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/challenge-bot/src/**/*.ts"],
        "fix": true
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/challenge-bot"],
      "options": {
        "jestConfig": "apps/challenge-bot/jest.config.ts",
        "passWithNoTests": true,
        "showConfig": false
      }
    }
  },
  "tags": ["type:app", "scope:admin"]
}
