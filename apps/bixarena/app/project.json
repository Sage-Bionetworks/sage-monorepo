{
  "name": "bixarena-app",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/bixarena/app",
  "targets": {
    "create-config": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cp -n .env.example .env",
        "cwd": "{projectRoot}"
      }
    },
    "prepare": {
      "executor": "nx:run-commands",
      "options": {}
    },
    "show-packages": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv pip list",
        "cwd": "{projectRoot}"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run python -m main --port ${APP_PORT}",
        "cwd": "{projectRoot}"
      }
    },
    "serve-detach": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker/bixarena/serve-detach.sh {projectName}"
      }
    },
    "serve-models-api": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run python run_models_api.py",
        "cwd": "{projectRoot}"
      }
    },
    "serve-with-models-api": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "echo 'üöÄ Starting Models API on port 8000...'",
          "uv run python run_models_api.py &",
          "sleep 2",
          "echo 'üåê Starting BixArena App on port ${APP_PORT}...'",
          "uv run python -m main --port ${APP_PORT}"
        ],
        "cwd": "{projectRoot}",
        "parallel": false
      }
    },
    "serve-legacy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run python -m fastchat.serve.gradio_web_server_multi --port ${APP_PORT} --controller-url ''",
        "cwd": "{projectRoot}"
      }
    },
    "scan-image": {
      "executor": "nx:run-commands",
      "options": {
        "command": "trivy image ghcr.io/sage-bionetworks/{projectName}:local --quiet",
        "color": true
      }
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "outputPath": "{projectRoot}/dist",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      },
      "cache": true
    }
  },
  "tags": ["type:app", "scope:backend", "language:python", "package-manager:uv"]
}
