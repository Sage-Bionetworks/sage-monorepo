{
  "name": "bixarena-app",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/bixarena/app",
  "targets": {
    "create-config": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cp -n .env.example .env",
        "cwd": "{projectRoot}"
      }
    },
    "prepare": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "sudo apt-get update -qq -y",
          "sudo apt-get install --no-install-recommends -qq -y gettext-base"
        ],
        "cwd": "{projectRoot}",
        "parallel": false
      }
    },
    "show-packages": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv pip list",
        "cwd": "{projectRoot}"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run python -m main --port ${APP_PORT}",
        "cwd": "{projectRoot}"
      }
    },
    "serve-detach": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker/bixarena/serve-detach.sh {projectName}"
      }
    },
    "serve-model-api": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run uvicorn src.model.models_api:app --host 0.0.0.0 --port 8000",
        "cwd": "{projectRoot}"
      }
    },
    "serve-legacy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run python -m fastchat.serve.gradio_web_server_multi --port ${APP_PORT} --controller-url ''",
        "cwd": "{projectRoot}"
      }
    },
    "scan-image": {
      "executor": "nx:run-commands",
      "options": {
        "command": "trivy image ghcr.io/sage-bionetworks/{projectName}:local --quiet",
        "color": true
      }
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "outputPath": "{projectRoot}/dist",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      },
      "cache": true
    }
  },
  "tags": ["type:app", "scope:backend", "language:python", "package-manager:uv"]
}
