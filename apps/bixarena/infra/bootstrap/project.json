{
  "name": "bixarena-infra-bootstrap",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "tags": ["language:terraform", "product:bixarena", "type:infra"],
  "targets": {
    "create-config": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cp --update=none .env.example .env",
        "cwd": "{projectRoot}"
      }
    },
    "init": {
      "executor": "nx:run-commands",
      "options": {
        "command": "terragrunt run-all init --queue-exclude-dir terraform-backend",
        "cwd": "{projectRoot}"
      },
      "configurations": {
        "terraform-backend": {
          "command": "terragrunt init --working-dir terraform-backend"
        }
      }
    },
    "validate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "terragrunt run-all validate",
        "cwd": "{projectRoot}"
      }
    }
  }
}
