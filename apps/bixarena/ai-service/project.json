{
  "name": "bixarena-ai-service",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/bixarena/ai-service/bixarena_ai_service",
  "projectType": "application",
  "targets": {
    "create-config": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cp -n .env.example .env",
        "cwd": "{projectRoot}"
      }
    },
    "generate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["xargs rm -fr <.openapi-generator/FILES", "openapi-generator-cli generate"],
        "cwd": "{projectRoot}",
        "parallel": false
      },
      "dependsOn": ["^build"]
    },
    "build": {
      "executor": "@nxlv/python:build",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "outputPath": "{projectRoot}/dist",
        "publish": false,
        "lockedVersions": true,
        "bundleLocalDependencies": true
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["uv run bixarena-ai-service --reload --host 0.0.0.0 --port ${APP_PORT}"],
        "cwd": "{projectRoot}",
        "parallel": false
      }
    },
    "serve-detach": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker/bixarena/serve-detach.sh {projectName}"
      }
    },
    "lint": {
      "executor": "@nxlv/python:ruff-check",
      "outputs": [],
      "options": {
        "lintFilePatterns": ["bixarena_ai_service/impl"]
      }
    },
    "test": {
      "executor": "@nxlv/python:run-commands",
      "outputs": [
        "{workspaceRoot}/reports/{projectRoot}/unittests",
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "command": "uv run pytest tests/",
        "cwd": "{projectRoot}"
      }
    }
  },
  "tags": ["type:service", "scope:backend", "language:python", "package-manager:uv"],
  "implicitDependencies": ["bixarena-api-description"]
}
