{
  "name": "model-ad-api",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/model-ad/api/src",
  "projectType": "application",
  "targets": {
    "create-config": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cp -n .env.example .env",
        "cwd": "{projectRoot}"
      }
    },
    "prepare": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "./gradlew --version 1> /dev/null"
        ],
        "cwd": "{projectRoot}"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/build"
      ],
      "options": {
        "command": "./gradlew build",
        "cwd": "{projectRoot}"
      },
      "dependsOn": [
        "^install"
      ]
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/build"
      ],
      "options": {
        "command": "./gradlew test",
        "cwd": "{projectRoot}"
      },
      "dependsOn": [
        "^install"
      ]
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./gradlew clean",
        "cwd": "{projectRoot}"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./gradlew spotlessApply",
        "cwd": "{projectRoot}"
      }
    },
    "format-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./gradlew spotlessCheck",
        "cwd": "{projectRoot}"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "./gradlew build --continuous",
          "./gradlew bootRun"
        ],
        "cwd": "{projectRoot}",
        "parallel": true
      },
      "dependsOn": [
        "^install"
      ]
    },
    "serve-detach": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker/model-ad/serve-detach.sh {projectName}"
      },
      "dependsOn": []
    },
    "build-image-base": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./gradlew bootBuildImage",
        "cwd": "{projectRoot}"
      },
      "dependsOn": [
        "^install"
      ]
    },
    "build-image": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "context": "apps/model-ad/api",
        "metadata": {
          "images": [
            "ghcr.io/sage-bionetworks/{projectName}"
          ],
          "tags": [
            "type=edge,branch=main",
            "type=raw,value=local",
            "type=sha"
          ]
        },
        "push": false
      },
      "dependsOn": [
        "build-image-base"
      ]
    },
    "publish-image": {
      "executor": "@nx-tools/nx-container:build",
      "context": "apps/model-ad/api",
      "options": {
        "metadata": {
          "images": [
            "ghcr.io/sage-bionetworks/{projectName}"
          ],
          "tags": [
            "type=edge,branch=main",
            "type=sha"
          ]
        },
        "push": true
      },
      "dependsOn": [
        "build-image"
      ]
    },
    "scan-image": {
      "executor": "nx:run-commands",
      "options": {
        "command": "trivy image ghcr.io/sage-bionetworks/{projectName}:local --quiet",
        "color": true
      }
    },
    "generate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "xargs rm -fr <.openapi-generator/FILES",
          "openapi-generator-cli generate",
          "./gradlew spotlessApply"
        ],
        "cwd": "{projectRoot}",
        "parallel": false
      },
      "dependsOn": [
        "^build"
      ]
    }
  },
  "tags": [
    "type:service",
    "scope:backend",
    "language:java",
    "package-manager:gradle"
  ],
  "implicitDependencies": [
    "model-ad-api-description",
    "shared-java-util"
  ]
}