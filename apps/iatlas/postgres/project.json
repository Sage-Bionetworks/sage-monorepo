{
  "name": "iatlas-postgres",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "targets": {
    "create-config": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cp -n .env.example .env",
        "cwd": "{projectRoot}"
      }
    },
    "serve-detach": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker/iatlas/serve-detach.sh iatlas-postgres"
      }
    },
    "build-image": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "context": "apps/iatlas/postgres",
        "metadata": {
          "images": ["ghcr.io/sage-bionetworks/iatlas-postgres"],
          "tags": ["type=edge,branch=main", "type=raw,value=local", "type=sha"]
        },
        "push": false
      }
    },
    "publish-image": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "context": "apps/iatlas/postgres",
        "metadata": {
          "images": ["ghcr.io/sage-bionetworks/iatlas-postgres"],
          "tags": ["type=edge,branch=main", "type=sha"]
        },
        "push": true
      },
      "dependsOn": ["build-image"]
    },
    "scan-image": {
      "executor": "nx:run-commands",
      "options": {
        "command": "trivy image ghcr.io/sage-bionetworks/iatlas-postgres:local --quiet",
        "color": true
      }
    }
  },
  "tags": ["type:db", "scope:backend"],
  "implicitDependencies": []
}
