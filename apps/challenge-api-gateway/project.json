{
  "name": "challenge-api-gateway",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/challenge-api-gateway/src",
  "projectType": "application",
  "targets": {
    "prepare": {
      "executor": "nx:run-commands",
      "options": {
        "command": "shx cp -n .env.example .env",
        "cwd": "apps/challenge-api-gateway"
      }
    },
    "prepare-java": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["./gradlew --version 1> /dev/null"],
        "cwd": "apps/challenge-api-gateway"
      }
    },
    "build": {
      "executor": "@nxrocks/nx-spring-boot:build",
      "options": {
        "root": "apps/challenge-api-gateway"
      },
      "outputs": ["{projectRoot}"],
      "dependsOn": ["^install"]
    },
    "test": {
      "executor": "@nxrocks/nx-spring-boot:test",
      "options": {
        "root": "apps/challenge-api-gateway"
      }
    },
    "clean": {
      "executor": "@nxrocks/nx-spring-boot:clean",
      "options": {
        "root": "apps/challenge-api-gateway"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["./gradlew build --continuous", "./gradlew bootRun"],
        "cwd": "apps/challenge-api-gateway",
        "parallel": true
      },
      "dependsOn": ["prepare", "^serve-detach"]
    },
    "serve-detach": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose up -d",
        "cwd": "apps/challenge-api-gateway"
      },
      "dependsOn": ["build-image", "prepare", "^serve-detach"]
    },
    "build-image": {
      "executor": "@nxrocks/nx-spring-boot:build-image",
      "options": {
        "root": "apps/challenge-api-gateway"
      },
      "dependsOn": ["^install"]
    }
  },
  "tags": ["type:service", "scope:backend"],
  "implicitDependencies": ["challenge-service-registry"]
}
