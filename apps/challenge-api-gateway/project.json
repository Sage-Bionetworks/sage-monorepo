{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/challenge-api-gateway/src",
  "projectType": "application",
  "targets": {
    "prepare": {
      "executor": "nx:run-commands",
      "options": {
        "command": "shx cp -n .env.example .env",
        "cwd": "apps/challenge-api-gateway"
      }
    },
    "prepare-java": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "./mvnw dependency:go-offline -DexcludeGroupIds=org.sagebionetworks.challenge || true"
        ],
        "cwd": "apps/challenge-api-gateway"
      }
    },
    "build": {
      "executor": "@nxrocks/nx-spring-boot:build",
      "options": {
        "root": "apps/challenge-api-gateway"
      },
      "outputs": ["apps/challenge-api-gateway"]
    },
    "test": {
      "executor": "@nxrocks/nx-spring-boot:test",
      "options": {
        "root": "apps/challenge-api-gateway"
      }
    },
    "clean": {
      "executor": "@nxrocks/nx-spring-boot:clean",
      "options": {
        "root": "apps/challenge-api-gateway"
      }
    },
    "serve": {
      "executor": "@nxrocks/nx-spring-boot:serve",
      "options": {
        "root": "apps/challenge-api-gateway"
      },
      "dependsOn": ["build", "prepare", "^serve-detach"]
    },
    "serve-detach": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose up -d",
        "cwd": "apps/challenge-api-gateway"
      },
      "dependsOn": ["build-image", "prepare", "^serve-detach"]
    },
    "build-image": {
      "executor": "@nxrocks/nx-spring-boot:build-image",
      "options": {
        "root": "apps/challenge-api-gateway",
        "args": ["-Dspring-boot.build-image.imageName=sagebionetworks/challenge-api-gateway:latest"]
      },
      "dependsOn": ["^install"]
    }
  },
  "tags": ["type:service", "scope:backend"],
  "implicitDependencies": ["challenge-service-registry"]
}
