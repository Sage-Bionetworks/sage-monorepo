{
  "name": "challenge-registry-keycloak",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/challenge-registry/keycloak/src",
  "projectType": "application",
  "targets": {
    "prepare": {
      "executor": "nx:run-commands",
      "options": {
        "command": "shx cp -n .env.example .env",
        "cwd": "apps/challenge-registry/keycloak"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose up",
        "cwd": "apps/challenge-registry/keycloak"
      },
      "dependsOn": ["prepare", "build-image", "^serve-detach"]
    },
    "serve-detach": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose up -d",
        "cwd": "apps/challenge-registry/keycloak"
      },
      "dependsOn": ["prepare", "build-image", "^serve-detach"]
    },
    "import-dev-data": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker run --rm --env-file .env -v \"$(pwd)\"/data/h2:/opt/keycloak/data/h2 -v \"$(pwd)\"/data/import:/opt/keycloak/data/import:ro sagebionetworks/challenge-registry-keycloak:latest import --dir /opt/keycloak/data/import --override true"
        ],
        "cwd": "apps/challenge-registry/keycloak"
      },
      "dependsOn": ["prepare", "build-image"]
    },
    "export-dev-data": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker run --rm --env-file .env -v \"$(pwd)\"/data/h2:/opt/keycloak/data/h2 -v \"$(pwd)\"/data/import:/opt/keycloak/data/import sagebionetworks/challenge-registry-keycloak:latest export --dir /opt/keycloak/data/import"
        ],
        "cwd": "apps/challenge-registry/keycloak"
      },
      "dependsOn": ["prepare", "build-image"]
    },
    "build-image": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "context": "apps/challenge-registry/keycloak",
        "push": false,
        "tags": ["sagebionetworks/challenge-registry-keycloak:latest"]
      }
    }
  },
  "tags": ["type:service", "scope:backend"],
  "implicitDependencies": ["challenge-registry-postgres"]
}
