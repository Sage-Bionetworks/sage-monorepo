{
  "name": "challenge-registry-mongo",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/challenge-registry/mongo/src",
  "projectType": "application",
  "targets": {
    "prepare": {
      "executor": "nx:run-commands",
      "options": {
        "command": "shx cp -n .env.example .env",
        "cwd": "apps/challenge-registry/mongo"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose up",
        "cwd": "apps/challenge-registry/mongo"
      },
      "dependsOn": ["prepare", "build-image"]
    },
    "build-image": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "context": "apps/challenge-registry/mongo",
        "push": false,
        "tags": ["sagebionetworks/challenge-registry-mongo:latest"]
      }
    }
  },
  "tags": ["type:db", "scope:backend"]
}
