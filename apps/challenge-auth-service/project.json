{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/challenge-auth-service/src",
  "projectType": "application",
  "targets": {
    "prepare": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "shx cp -n .env.example .env",
        "cwd": "apps/challenge-auth-service"
      }
    },
    // "build": {
    //   "executor": "@nxrocks/nx-spring-boot:build",
    //   "options": {
    //     "root": "apps/challenge-auth-service"
    //   },
    //   "dependsOn": [
    //     {
    //       "target": "install",
    //       "projects": "dependencies"
    //     }
    //   ]
    // },
    "build": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        // "command": "./mvnw package",
        "command": "mvn package",
        "cwd": "apps/challenge-auth-service"
      },
      "dependsOn": [
        {
          "target": "install",
          "projects": "dependencies"
        }
      ]
    },
    "test": {
      "executor": "@nxrocks/nx-spring-boot:test",
      "options": {
        "root": "apps/challenge-auth-service"
      }
    },
    "clean": {
      "executor": "@nxrocks/nx-spring-boot:clean",
      "options": {
        "root": "apps/challenge-auth-service"
      }
    },
    "format": {
      "executor": "@nxrocks/nx-spring-boot:format",
      "options": {
        "root": "apps/challenge-auth-service"
      }
    },
    "format-check": {
      "executor": "@nxrocks/nx-spring-boot:format-check",
      "options": {
        "root": "apps/challenge-auth-service"
      }
    },
    "serve": {
      "executor": "@nxrocks/nx-spring-boot:serve",
      "options": {
        "root": "apps/challenge-auth-service"
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": "self"
        },
        {
          "target": "prepare",
          "projects": "self"
        },
        {
          "target": "serve-detach",
          "projects": "dependencies"
        }
      ]
    },
    "serve-detach": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "docker compose up -d",
        "cwd": "apps/challenge-auth-service"
      },
      "dependsOn": [
        {
          "target": "build-image",
          "projects": "self"
        },
        {
          "target": "prepare",
          "projects": "self"
        },
        {
          "target": "serve-detach",
          "projects": "dependencies"
        }
      ]
    },
    "build-image": {
      "executor": "@nxrocks/nx-spring-boot:buildImage",
      "options": {
        "root": "apps/challenge-auth-service",
        "args": [
          "-Dspring-boot.build-image.imageName=sagebionetworks/challenge-auth-service:latest"
        ]
      },
      "dependsOn": [
        {
          "target": "install",
          "projects": "dependencies"
        }
      ]
    }
  },
  "tags": [
    "type:service",
    "scope:backend"
  ],
  "implicitDependencies": [
    "challenge-keycloak",
    "challenge-service-registry",
    "challenge-api-gateway",
    "shared-java-challenge-util"
  ]
}
