{
  "name": "challenge-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/challenge-service/src",
  "projectType": "application",
  "targets": {
    "prepare": {
      "executor": "nx:run-commands",
      "options": {
        "command": "shx cp -n .env.example .env",
        "cwd": "apps/challenge-service"
      }
    },
    "prepare-java": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["./gradlew --version 1> /dev/null"],
        "cwd": "apps/challenge-service"
      }
    },
    "build": {
      "executor": "@nxrocks/nx-spring-boot:build",
      "options": {
        "root": "apps/challenge-service"
      },
      "outputs": ["apps/challenge-service"],
      "dependsOn": ["^install"]
    },
    "clean": {
      "executor": "@nxrocks/nx-spring-boot:clean",
      "options": {
        "root": "apps/challenge-service"
      }
    },
    "format": {
      "executor": "@nxrocks/nx-spring-boot:format",
      "options": {
        "root": "apps/challenge-service"
      }
    },
    "format-check": {
      "executor": "@nxrocks/nx-spring-boot:check-format",
      "options": {
        "root": "apps/challenge-service"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["./gradlew build --continuous", "./gradlew bootRun"],
        "cwd": "apps/challenge-service",
        "parallel": true
      },
      "dependsOn": ["prepare", "^install", "^serve-detach"]
    },
    "serve-detach": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose up -d",
        "cwd": "apps/challenge-service"
      },
      "dependsOn": ["build-image", "prepare", "^serve-detach"]
    },
    "build-image": {
      "executor": "@nxrocks/nx-spring-boot:build-image",
      "options": {
        "root": "apps/challenge-service"
      },
      "dependsOn": ["^install"]
    },
    "openapi-generate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "xargs rm -fr <.openapi-generator/FILES",
          "openapi-generator-cli generate",
          "./gradlew spotlessApply"
        ],
        "cwd": "apps/challenge-service",
        "parallel": false
      }
    }
  },
  "tags": ["type:service", "scope:backend"],
  "implicitDependencies": [
    "challenge-registry-mariadb",
    "challenge-service-registry",
    "challenge-registry-api-gateway",
    "challenge-registry-keycloak",
    "shared-java-challenge-util"
  ]
}
