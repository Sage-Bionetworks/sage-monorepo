    //   "executor": "@nx-tools/nx-container:build",
    //   "options": {
    //     "context": "apps/openchallenges/notebook",
    //     "push": false,
    //     "tags": ["ghcr.io/sage-bionetworks/openchallenges-notebook:latest"]
    //   }
    // }
  },
  "tags": ["type:app", "scope:client"],
  "implicitDependencies": []
}
