{
  "name": "sonarqube",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "targets": {
    "prepare": {
      "executor": "nx:run-commands",
      "options": {
        "command": "shx cp -n .env.example .env",
        "cwd": "apps/shared/sonarqube"
      }
    },
    "serve-detach": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker/shared/serve-detach.sh sonarqube"
      },
      "dependsOn": []
    },
    "build-image": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "context": "apps/shared/sonarqube",
        "metadata": {
          "images": ["ghcr.io/sage-bionetworks/sonarqube"],
          "tags": [
            "type=edge,branch=main",
            "type=raw,value=local",
            "type=sha"
          ]
        },
        "push": false
      }
    },
    "publish-image": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "context": "apps/shared/sonarqube",
        "metadata": {
          "images": ["ghcr.io/sage-bionetworks/sonarqube"],
          "tags": [
            "type=edge,branch=main",
            "type=sha"
          ]
        },
        "push": true
      },
      "dependsOn": ["build-image"]
    },
    "publish-and-remove-image": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker rmi $(docker images --filter=reference=ghcr.io/sage-bionetworks/sonarqube:* --quiet) --force"
      },
      "dependsOn": ["publish-image"]
    },
    "build-and-remove-image": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker rmi $(docker images --filter=reference=ghcr.io/sage-bionetworks/sonarqube:* --quiet) --force"
      },
      "dependsOn": ["build-image"]
    },
    "scan-image": {
      "executor": "nx:run-commands",
      "options": {
        "command": "trivy image ghcr.io/sage-bionetworks/sonarqube:local --quiet",
        "color": true
      }
    }
  },
  "tags": ["type:app", "scope:backend"],
  "implicitDependencies": []
}
